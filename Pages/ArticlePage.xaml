<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Recap.ArticlePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Recap"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Recap.ViewModels"
    mc:Ignorable="d"
    xmlns:helpers="using:Recap.Helpers"
    xmlns:ui="using:CommunityToolkit.WinUI.Controls">

    <Page.Resources>
        <helpers:StringConverter x:Key="StringConverter"/>
    </Page.Resources>

    <Grid x:Name="ArticlePageGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Background="{ThemeResource LayerOnMicaBaseAltFillColorDefault}" Margin="7.5,7.5,0,7.5" CornerRadius="5,0,0,5"> 
            <ListView ItemsSource="{Binding Articles}"
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Top"
                      SelectionChanged="ArticlePageListView_SelectionChanged"
                      SelectionMode="Single"
                      Background="Transparent"
                      Padding="2">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="vm:Article">
                        <StackPanel Background="Transparent">
                            <TextBlock Padding="0,10"
                                       VerticalAlignment="Top" 
                                       HorizontalAlignment="Left" 
                                       FontWeight="SemiBold" FontSize="16" 
                                       Text="{x:Bind ArticleTitle}"
                                       TextWrapping="NoWrap"
                                       TextTrimming="CharacterEllipsis"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal" Grid.Column="0">
                                    <TextBlock Padding="0,0,0,10"
                                               VerticalAlignment="Top" 
                                               HorizontalAlignment="Left"
                                               FontWeight="Medium" FontSize="12"
                                               Text="{x:Bind ArticleFeed.FeedName, 
                                                Converter={StaticResource StringConverter},
                                                ConverterParameter=From: {0}}"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap"/>

                                    <ImageIcon Source="{x:Bind ArticleFeed.FavIconUri}" 
                                               Width="16" 
                                               Height="16"
                                               Margin="5,-20,0,0"/>

                                    <TextBlock Padding="10,2,0,20"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Left"
                                               FontFamily="Medium" FontSize="12"
                                               Text="{x:Bind DisplayablePublishedDate, 
                                                Converter={StaticResource StringConverter},
                                                ConverterParameter=at: {0}}"
                                               TextWrapping="NoWrap"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <ui:GridSplitter Grid.Column="1" 
                         Width="5" 
                         Background="{ThemeResource LayerOnMicaBaseAltFillColorSecondaryBrush}" 
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Stretch" 
                         Margin="0,7.5,0,7.5"
                         ResizeBehavior="BasedOnAlignment"
                         ResizeDirection="Auto"/>

        <Grid Grid.Column="2" Background="{ThemeResource LayerOnMicaBaseAltFillColorDefault}" Margin="0,7.5,7.5,7.5" CornerRadius="0,5,5,0">
            <WebView2 x:Name="ArticleWebView"/>
            <StackPanel x:Name="ArticleNotOpenPanel" HorizontalAlignment="Center" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE736;" FontSize="50" Margin="10"/>
                <TextBlock Text="Open an article to start reading"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
